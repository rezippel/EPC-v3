%% Abbreviations used to simplify creating an index entry while
%% defining a term. 
\def\keyi#1{\textit{#1}\index{#1}}
\def\keyb#1{\textbf{#1}\index{#1}}
\def\keyw#1{\texttt{#1}\index{#1@\protect\texttt{#1}}}
\def\key#1{{#1}\index{#1}}

